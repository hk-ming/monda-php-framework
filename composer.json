{
  "name": "mondagroup/monda-php-framework",
  "description": "monda php framework",
  "authors": [
    {
      "name": "chenzf",
      "email": "chenzf@pvc123.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-mbstring": "*",
    "psr/container": "^1.0",
    "predis/predis": "^1.1",
    "psr/log": "^1.1",
    "vlucas/phpdotenv": "^3.4",
    "illuminate/database": "v5.8.36",
    "spatie/async": "^1.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "friendsofphp/php-cs-fixer": "^2.14"
  },
  "autoload": {
    "psr-4": {
      "framework\\": "src/"
    },
    "files": [
      "src/function.php"
    ]
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer"
    }
  },
  "scripts": {
    "cs-fix": "composer dump -o && php-cs-fixer fix $1"
  }
}
